{
  "name": "vscode-odoo-test-method-launcher",
  "displayName": "Odoo Test Method Launcher",
  "description": "Launch Odoo test methods directly from VS Code",
  "version": "0.0.1",
  "publisher": "odoo-community",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/vscode-odoo-test-method-launcher"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-odoo-test-method-launcher.launchTest",
        "title": "Launch Odoo Test Method"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vscode-odoo-test-method-launcher.launchTest",
          "when": "editorLangId == python && resourceFilename =~ /test_.*\\.py$/",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Odoo Test Method Launcher",
      "properties": {
        "odooTestMethodLauncher.odooPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Odoo executable"
        },
        "odooTestMethodLauncher.configPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Odoo configuration file"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2",
    "@vscode/vsce": "^2.22.0"
  }
}
